<h2>Create Post</h2>
<br/>
<form action="/" method="post" role="form">
 <div class="form-group">
   <label for="name">Name:</label>
   <br>
   <input id="name" class="form-control" name="name" type="text" value="<%= @post.name %>" style="width=90%"/>
 </div>
 <div class="form-group">
   <label for="nopeople">Number Of People:</label>
   <br>
   <input id="nopeople" class="form-control" name="nopeople" type="number" value="<%= @post.nopeople %>" style="width=90%"/>
 </div>
 <div class="form-group">
   <label for="phno">Phone Number</label>
   <br>
   <input id="phno" class="form-control" name="phno" type="text" value="<%= @post.phno %>" style="width=90%"/>
 </div>
 <div class="form-group">
   <label for="email">Email:</label>
   <br>
   <input id="email" class="form-control" name="email" type="text" value="<%= @post.email %>" style="width=90%"/>
 </div>
 <button type="submit" class="btn btn-success">Submit</button>
</form>
